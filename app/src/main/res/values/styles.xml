<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lobster_two</item>
    </style>

    <!-- Define a custom text style for the title and subtitle.
    By convention, text styles normally begin with "TextAppearance"  -->

    <!-- Extend the Headline6 style from Material Components -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#555555</item>
    </style>

    <!-- Extend the TextAppearance.Title style we just created -->
    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title" >
        <item name="android:textSize">18sp</item>
    </style>

</resources>